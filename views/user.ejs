<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('partials/header'); -%>
    <h1>User List</h1>

    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>Admin</th>
        </tr>
      </thead>
      <tbody id="userTableBody"></tbody>
    </table>

    <script>
        // Sử dụng JavaScript để fetch dữ liệu từ server và hiển thị trên trang web
        fetch('/user')
          .then(response => response.json())
          .then(users => {
            const userTableBody = document.getElementById('userTableBody');
            users.forEach(user => {
              const row = document.createElement('tr');
              row.innerHTML = `
                <td>${user.email}</td>
                <td>${user.password}</td>
                <td>${user.admin}</td>
              `;
              userTableBody.appendChild(row);
            });
          })
          .catch(error => console.error(error));
      </script>
      
</body>
</html>